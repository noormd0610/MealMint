 <% layout("layout/boilerplate") -%>
<div class="container mt-5">
  <h2 class="text-dark mb-4"><strong>Add A New Restaurant</strong></h2>

  <form action="/restaurant/add" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="row g-3">
      <div class="col-12">
        <label for="name" class="form-label">Restaurant Name</label>
        <input type="text" name="restaurant[name]" id="name" placeholder="Enter a unique restaurant name"
          class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">A restaurant name is required.</div>
      </div>

      <div class="col-12">
        <label for="type" class="form-label">Restaurant Type</label>
        <select name="restaurant[type]" class="form-control" required id="type">
          <option value="">--Please choose an option--</option>
          <option value="Fast Food">Fast Food</option>
          <option value="Casual Dining">Casual Dining</option>
          <option value="Fine Dining">Fine Dining</option>
          <option value="Cafe">Cafe</option>
          <option value="Buffet">Buffet</option>
          <option value="Food Truck">Food Truck</option>
          <option value="Street Food">Street Food</option>
          <option value="Tiffin center">Tiffin center</option>
          <option value="Biryani center">Biryani center</option>
        </select>
        <div class="valid-feedback">Great! Type selected.</div>
        <div class="invalid-feedback">Please select a type.</div>
      </div>

      <div class="col-12">
        <label for="coverFood" class="form-label">Cover Food Items</label>
        <input type="text" name="restaurant[coverFood]" id="coverFood"
          placeholder="e.g., Parota, Dosa, Puri" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter at least one item.</div>
      </div>

      <div class="col-12">
        <label for="coverImage" class="form-label">Upload Image</label>
        <input type="file" name="restaurant[coverImage]" id="coverImage" class="form-control" multiple>
      </div>

      <div class="col-12">
        <label for="foods" class="form-label">Food Items</label>
        <input type="text" name="restaurant[foods]" id="foods"
          placeholder="e.g., Idli, Dosa, Pongal" class="form-control" required>
        <div class="valid-feedback">Great! Foods added.</div>
        <div class="invalid-feedback">Please enter at least one food item.</div>
      </div>

      <div class="col-md-6 col-12">
        <label for="price" class="form-label">Price</label>
        <input type="text" name="restaurant[price]" id="price" placeholder="1200" class="form-control" required>
        <div class="valid-feedback">Price is set.</div>
        <div class="invalid-feedback">Please enter the price.</div>
      </div>

      <div class="col-md-6 col-12">
        <label for="address" class="form-label">Address</label>
        <input type="text" name="restaurant[address]" id="address" placeholder="India" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Address is required.</div>
      </div>

      <div class="col-12">
        <label for="distance" class="form-label">Distance</label>
        <input type="text" name="restaurant[distance]" id="distance" placeholder="e.g., 2.5 km from campus"
          class="form-control" required>
        <div class="valid-feedback">Distance is good.</div>
        <div class="invalid-feedback">Please enter distance.</div>
      </div>

      <div class="col-12"> 
        <button class="btn btn-outline-danger mb-4" type="submit">Add Restaurant</button>
      </div>
    </div>
  </form>
</div>

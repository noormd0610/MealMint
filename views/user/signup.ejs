 <% layout("/layout/boilerplate") -%>

<div class="container my-5">
    <h2 class="text-center text-dark mb-4"><b>SignUp On MealMint</b></h2>
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Enter a unique username" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">A username is required to proceed.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter a valid email" required>
                    <div class="valid-feedback">Great! Your email is in place.</div>
                    <div class="invalid-feedback">Almost there! Just add a valid email.</div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter a strong password" required>
                    <div class="valid-feedback">Great! Password added.</div>
                    <div class="invalid-feedback">A password is required.</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>